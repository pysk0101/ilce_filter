<!-- views/index.ejs -->

<!DOCTYPE html>
<html>

<head>
    <title>Final Sinavi</title>
</head>

<body>
    <header style="float: left;width: 100%;">
        <table style="border-collapse:collapse;background-color: #2c3633;width: 100%;height: 75px;margin: 0%;">
            <td>
                <a href="http://localhost:3000/iletisim">
                    <button
                        style="border-color: #2c3633;float:left;background-color:#2c3633;color:white;width:200px;height:75px;">İletişim
                    </button></a>

                <a href="https://tr.wikipedia.org/wiki/T%C3%BCrkiye%27nin_il%C3%A7eleri">
                    <button
                        style="border-color: #2c3633;float:left;background-color:#2c3633;color:white;width:200px;height:75px;">Türkiye
                        il ilçe sayfası </button></a>
            </td>
        </table>
    </header><br><br><br>

    <div style="margin: 4%;">
        <form id="filterForm">
            Plaka ara:
            <input type="text" id="searchInput" placeholder="Ara...">
            <button type="submit" id="filterButton">Filtrele</button>
        </form>
    </div>

    <table id="ilcelerTable" style="border-collapse:collapse;width:100%;">
        <thead>
            <tr>
                <th style="border: 2px solid black;width: 10%;">s.n</th>
                <th style="border: 2px solid black;width: 20%">şehir plakaları</th>
                <th style="border: 2px solid black;width: 60%">ilçeler</th>
            </tr>
        </thead>
        <tbody>
            <% ilceler.forEach(function(ilce) { %>
                <tr>
                    <td style="border: 2px solid black">
                        <%= ilce.id %>
                    </td>
                    <td style="border: 2px solid black">
                        <%= ilce.sehir_id %>
                    </td>
                    <td style="border: 2px solid black">
                        <%= ilce.ilce_adi %>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <script>
        document.getElementById('filterForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const plaka = document.getElementById('searchInput').value;
            fetch(`/search?plaka=${encodeURIComponent(plaka)}`)
                .then(response => response.json())
                .then(data => {
                    const ilcelerTable = document.getElementById('ilcelerTable').getElementsByTagName('tbody')[0];
                    ilcelerTable.innerHTML = ''; 
                    data.forEach(ilce => {
                        const row = `<tr>
                                        <td style="border: 2px solid black">${ilce.id}</td>
                                        <td style="border: 2px solid black">${ilce.sehir_id}</td>
                                        <td style="border: 2px solid black">${ilce.ilce_adi}</td>
                                    </tr>`;
                        ilcelerTable.insertAdjacentHTML('beforeend', row);
                    });
                })
                .catch(error => console.error('Error:', error));
        });
    </script>

</body>

</html>
